{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Backend",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/src/",
      "args": [
        "app:app_factory"
      ],
      "jinja": true,
      "justMyCode": true
    },
  ]
}